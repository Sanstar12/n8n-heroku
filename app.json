{
  "name": "n8n",
  "description": "Deploy n8n to Heroku",
  "keywords": [
    "n8n",
    "node",
    "automation"
  ],
  "website": "https://n8n.io",
  "repository": "https://github.com/n8n-io/n8n-heroku",
  "logo": "https://raw.githubusercontent.com/n8n-io/n8n-heroku/main/n8n_logo.png",
  "success_url": "/",
  "stack": "container",
  "env": {
    "GENERIC_TIMEZONE": {
      "description": "Timezone",
      "value": "Asia/Kolkata"
    },
    "N8N_ENCRYPTION_KEY": {
      "description": "Encryption key (do not change later)",
      "value": "n8n_secure_key_please_change_this_123456789"
    },
    "WEBHOOK_URL": {
      "description": "Replace <appname> with your Heroku app name",
      "value": "https://<appname>.herokuapp.com/"
    },
    "DB_POSTGRESDB_SSL_REJECT_UNAUTHORIZED": {
      "description": "Required for Heroku Postgres",
      "value": "false"
    }
  },
  "addons": [
    {
      "plan": "papertrail:choklad"
    }
  ]
}
